@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_XxxLutzLayout.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Users"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Användare", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("username", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Lösenord", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("password", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Logga in" class="btn btn-primary" />
                <a href="@Url.Action("Create", "Users")" class="btn btn-primary">Registrera</a>
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <a href="@Url.Action("ResetPassword", "Users")" class="btn btn-primary col-md-offset-2">Glömt lösenord</a>
                }
            </div>
        </div>
    </div>
}