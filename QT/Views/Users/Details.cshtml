@using QT.Authentication
@model QT.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_XxxLutzLayout.cshtml";
    var isAdmin = AdminAuthenticationHelper.Current.GetAdminUserData().Role == Role.Administrator.ToString();
}


<div class="well">
    <h4>@Model.Username</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Namn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Efternamn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        
        <dt>
            Användarnamn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>
        
        <dt>
            E-post
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>*@

        <dt>
            Roll
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Redigera", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink("Tillbaka", "Index", "Home", null, new { @class = "btn btn-black" })
        @if (isAdmin)
        {
            @Html.ActionLink("Ny användare", "Create", "Users", null, new { @class = "btn btn-black" })
        }
    </p>
</div>
