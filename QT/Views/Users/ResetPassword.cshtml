@{
    ViewBag.Title = "Återsäll lösenord";
    Layout = "~/Views/Shared/_XxxLutzLayout.cshtml";
}

<h2>Återsäll lösenord</h2>

@using (Html.BeginForm("ResetPassword", "Users"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-offset-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Epost eller användarnamn", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.Editor("emailOrUsername",  new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Återställ lösenord" class="btn btn-primary" />
            </div>
        </div>
    </div>
}